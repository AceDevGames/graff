@model Graff.Models.ViewModels.LancesLeilaoFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Lances nos Leilões</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="LancesLeilao.Leilao.ProdutoId" class="control-label"></label>
                <select asp-for="LancesLeilao.Leilao.ProdutoId" asp-items="@(new SelectList(Model.Produtos,"id",
                "nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="LancesLeilao.PessoaId" class="control-label"></label>
                <select asp-for="LancesLeilao.PessoaId" asp-items="@(new SelectList(Model.Pessoas,"id",
                "nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="LancesLeilao.valor" class="control-label"></label>
                <input asp-for="LancesLeilao.valor" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn" />
            </div>
        </form>
    </div>
</div>

